(defun *small* 0)
*small*
(defun *big* 100)
*big*


(defun guess-my-number()
  (ash (+ *small* *big*) -1))
guess-my-number

(defun smaller()
  (setf *big* (1- (guess-my-number)))
  (guess-my-number))
smaller

(defun bigger()
  (setf *small* (1+ (guess-my-number)))
  (guess-my-number))
bigger

(defun start-over ()
  (defparameter "small" 0)
  (defparameter "big" 100)
  (guess-my-number))
start-over





